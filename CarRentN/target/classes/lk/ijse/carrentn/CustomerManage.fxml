<AnchorPane id="AnchorPane" fx:id="customerContent" prefHeight="600.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.carrentn.controller.CustomerManageController">
    <children>
