                                    <HBox.margin>
                                        <Insets left="5.0" right="5.0" />
                                    </HBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#handleCustomerUpdate" prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: blue;" text="Update" textFill="WHITE">
                                    <font>
                                        <Font size="18.0" />
